#!/bin/bash -e

pid=pid/resque.pid
log=log/resque.log

source $OPENSHIFT_CARTRIDGE_SDK_BASH
source "${OPENSHIFT_RUBY_DIR}/lib/util"
source "${OPENSHIFT_RUBY_DIR}/lib/ruby_context"

function start() {
    echo "Starting resque worker"

    ruby_context "environment QUEUE='high,normal,low' PIDFILE=$pid LOG=$log rake resque:work"
    return 0
}

function stop() {
    echo "Stopping resque worker"

    kill -QUIT $(cat $pid)
    return 0

}

function status() {
    client_result $pwd
    if [ -f $pid ] && ( kill -0 $(cat $pid) ); then
        client_result "Resque is running"
    else
        client_result "Resque is not running"
    fi
}

function restart() {
    if (stop); then
        start
    else
        start
    fi
}


function update() {
    echo
}

function build() {
    echo
}

function post-deploy() {
    echo
}

function pre-build() {
    echo
}

function tidy() {
    echo
}

case "$1" in
  start)             start ;;
  stop)              stop ;;
  restart | reload ) restart $1 ;;
  status)            status ;;
  tidy)              tidy ;;
  pre-build)         pre-build ;;
  build)             build ;;
  deploy)            deploy ;;
  post-deploy)       post-deploy ;;
  *)                 exit 0
esac
